<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login_layout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/txtUsername"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="50dp"
            android:text="@string/strRequestPass"
            android:id="@+id/btnRequestPass"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCountDown"
            />

    </LinearLayout>



    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/txtPassword"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkRememberUsername"
        android:text="@string/strRememberUsername"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/strLogin"
        android:id="@+id/btnLogin"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/strSettings"
        android:id="@+id/btnTopbarSettings"
        />

</LinearLayout>